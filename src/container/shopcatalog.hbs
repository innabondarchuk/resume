<main class='row g-5'>
    {{>breadcrumb}}
    <h1 class="mt-0">{{header}}</h1>
    
    {{#each sortBlock}}
        <div class="col-3">
            <select class="form-select">
                <option selected>{{placeholder}}</option>
                {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                {{/each}}
            </select>
        </div>
    {{/each}}
    
    {{#with filterBlock}}
        <div class='card col-4'>
            <div class="row p-3">
                {{#with sellers}}
                    <div class='form-label'>{{title}}</div>
                    {{#each list}}
                        <div class='form-check mb-3'>
                            <label class='form-check-label'>{{value}}</label>
                            <input
                            name='seller'
                            type='checkbox'
                            class='form-check-input'
                            />
                        </div>
                    {{/each}}
                {{/with}}
                <hr>
                {{#with brands}}
                    <div class="form-label">{{title}}</div>
                    {{#with input}}
                        <input class="form-control mb-3" placeholder="{{placeholder}}">
                    {{/with}}
                    {{#each options}}
                        <div class="form-check mb-3">
                            <label class="form-check-label">{{value}}</label>
                            <input name="options" type="checkbox" class="form-check-input">
                        </div>
                    {{/each}}
                {{/with}}
                <hr>
                {{#with price}}
                    <div class="form-label">{{title}}</div>
                    {{#with range}}
                        <input class="form-control" placeholder="{{from}}" >
                        <input class="form-control my-3" placeholder="{{to}}" >
                    {{/with}}
                    {{#with button}}
                        <div>
                            <a href="{{link}}" class="btn btn-outline-secondary mb-3">{{text}}</a>
                        </div>
                    {{/with}}
                {{/with}}
                <hr>
                {{#each filterList}}
                    <div class="form-label">{{title}}</div>
                    {{#each options}}
                        <div class="form-check mb-3">
                            <label class="form-check-label">{{value}}</label>
                            <input name="options" class="form-check-input" type="checkbox">
                        </div>
                    {{/each}}
                    <hr>
                {{/each}}
            </div>
        </div>
    {{/with}}
    
    <div class="col-8">
        <div class="row">
            {{#each goodsList}}
                {{>catalogItem}}
            {{/each}}
        </div>
    </div>
    

    {{>shopaction}}

    <hr>
</main>

