      {{/with}}
    </div>
    <hr />
    <footer>
      <div class='row m-5 g-5'>
        {{#each footer}}
          <div class='nav col-2'>
            <div>
              {{#each this}}
                <div>
                  <a href='{{link}}' class="nav-link {{#if @last}} disabled {{/if}}">{{text}}</a>
