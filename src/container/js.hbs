{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div class="row p-5">
  <header>

    <h1><span class="badge bg-secondary">{{name}}</span></h1>
    <p>{{description}}</p>
    <div><strong>{{history.year}}, {{history.founder}}</strong></div>
  </header>
  <hr />
  <main>
    <div class="accordion" id="accordionExample">
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
            Types:
          </button>
        </h2>
        <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
          <div class="accordion-body">
            <ul>
              {{#each types}}
                <li>{{this}}</li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
            Syntax:
          </button>
        </h2>
        <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
          <div class="accordion-body">
            <div>
              <span class="badge rounded-pill text-bg-primary">Variables:</span>
                <ol type='1'>
                  {{#each syntax.variables}}
                    <li>{{this}}</li>
                  {{/each}}
                </ol>
            </div>
            <br>
            <div>
              <span class="badge rounded-pill text-bg-success">Function:</span>
                <ol type='1'>
                  {{#each syntax.functions}}
                    <li>{{this}}</li>
                  {{/each}}
            </div>
            <br>
            <div>
              <span class="badge text-bg-danger">Conditional:</span>
                <ol type='1'>
                  {{#each syntax.conditionals}}
                    <li>{{this}}</li>
                  {{/each}}
            </div>
            <br>
            <div>
              <span class="badge text-bg-warning">Loops:</span>
                <ol type='1'>
                  {{#each syntax.loops}}
                    <li>{{this}}</li>
                  {{/each}}
            </div>
            <br>
            <div>
              <span class="badge text-bg-info">Classes:</span>
              <ol type='1'>
                {{#each syntax.classes}}
                  <li>{{this}}</li>
                {{/each}}
            </div>
          </div>
        </div>
      </div>
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
            Features:
          </button>
        </h2>
        <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
          <div class="accordion-body">
            <ul>
            {{#each features}}
              <li>{{this}}</li>
            {{/each}}
          </ul>
          </div>
        </div>
      </div>
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
            Libraries:
          </button>
        </h2>
        <div id="collapseFour" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
          <div class="accordion-body">
            <ul>
              {{#each libraries}}
                <li>{{this}}</li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive">
            Tools:
          </button>
        </h2>
        <div id="collapseFive" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
          <div class="accordion-body">
            <ul>
              {{#each tools}}
                <li>{{this}}</li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </main>
  <hr />
  <footer>
    {{#each community}}
      <button type="button" class="btn btn-primary">
        <div>{{name}}</div>
        <div>({{type}})</div>
      </button>
    {{/each}}
    
  </footer>

</div>

