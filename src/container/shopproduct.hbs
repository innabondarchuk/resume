{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  
 {{>breadcrumb}}

  <main>
    <div class="row p-2">
      {{#with productData}}
        <div class='col-6'>
          <div class='card'>
            <img
              class='card-img-top'
              src='{{img}}'
              alt='Product photo'
            />
            <div class='card-body'>
              {{#with info}}
                <h5 class='card-title'>{{title}}</h5>
                <p>{{about}}</p>
                <div class='display-6 mb-2'>{{price}}</div>
                {{#each category}}
                  {{#if isHot}}<button
                      class='btn btn-warning rounded-pill'
                    >{{name}}</button>{{/if}}
                  {{#if isNew}}<button
                      class='btn btn-primary rounded-pill'
                    >{{name}}</button>{{/if}}
                  {{#if isBonus}}<button
                      class='btn btn-info rounded-pill'
                    >{{name}}</button>{{/if}}
                {{/each}}
              {{/with}}

            </div>
          </div>
        </div>
      {{/with}}

      {{#with productData}}
        <div class="col-5 ms-5">
          {{#with item}}
            <div class="col-12">
              <table class="table ">
                <thead>
                  <tr>
                    {{#each head}}
                      <th>{{this}}</th>
                    {{/each}}
                  </tr>
                </thead>
                <tbody>
                  {{#each body}}
                    <tr>
                      {{#each this}}
                        <td>{{this}}</td>
                      {{/each}}
                    </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          {{/with}}
        
          {{#with param}}
            <div class="col-12">
              <div class="card">
                <div class="card-header">
                  <div>{{title}}</div>
                </div>
                <ul class="list-group list-group-flush">
                  {{#each list}}
                  <li class="list-group-item">{{this}}</li>
                  {{/each}}
                </ul>
              </div>
            </div>
          {{/with}}

          {{#with alert}}
            <div class="col-12 mt-5">
              {{#if isError}}
                <div class="alert alert-danger" role="alert">
                {{text}}
              </div>
              {{/if}}
            </div>
          {{/with}}
        </div>

        <div class="col-12 my-5">
          <div class="card">
            <div class="card-body">
              {{#each actionList}}
                {{#if isWarning}}<button class="btn btn-warning me-3">{{name}}</button>{{/if}}
                {{#if isError}}<button class="btn btn-outline-danger me-3">{{name}}</button>{{/if}}
                {{#if isSuccess}}<button class="btn btn-success  me-3">{{name}}</button>{{/if}}
                {{#if isGood}}<button class="btn btn-outline-success">{{name}}</button>{{/if}}
              {{/each}}
            </div>
          </div>
        </div>
      {{/with}}
    </div>
    <hr>
    
    {{> shopcard}}
    
    <hr>
  
    {{>shopaction}}

  </main>

  <hr>
  
</div>

{{!-- 
    Цей код містить лише те, що буде виводитись в {{{body}}} в layout/default.hbs
    Адже наш layout/default.hbs має вже структуру HTML
--}}