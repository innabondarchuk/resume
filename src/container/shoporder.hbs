<div class='row p-2'>
  <h1 class='my-5'>{{header}}</h1>

  {{#with contacts_data}}
    <h3>{{title}}</h3>
    <div class='row'>
      <div class='col-8 my-3'>
        {{#each buttons}}
          {{#if isPrimary}}<button
              class='btn btn-warning text-white'
            >{{text}}</button>{{/if}}
          {{#if isOutline}}<button
              class='btn btn-outline-warning'
            >{{text}}</button>{{/if}}
        {{/each}}
      </div>
    </div>

    {{#with form}}
      <div class='row col-8'>
        {{#with input}}

          {{#with surname}}
            <div class='col-6'>
              <label class='forrm-label'>{{label}}</label>
              <input
                class='form-control'
                placeholder='{{placeholder}}'
              />
              <div class='form-text'>{{caption}}</div>
            </div>
          {{/with}}

          {{#with name}}
            <div class='col-6'>
              <label class='forrm-label'>{{label}}</label>
              <input
                class='form-control'
                placeholder='{{placeholder}}'
              />
              <div class='form-text'>{{caption}}</div>
            </div>
          {{/with}}

          {{#with phone}}
            <div class='col-6'>
              <label class='forrm-label'>{{label}}</label>
              <input
                class='form-control'
                placeholder='{{placeholder}}'
              />
              <div class='form-text'>{{caption}}</div>
            </div>
          {{/with}}

          {{#with email}}
            <div class='col-6'>
              <label class='forrm-label'>{{label}}</label>
              <input
                class='form-control'
                placeholder='{{placeholder}}'
              />
              <div class='form-text'>{{caption}}</div>
            </div>
          {{/with}}
        {{/with}}
        <hr />
        {{#each switch}}
          <div class='col-12'>
            {{#if isActive}}
              <div class='form-check form-switch'>
                <label
                  class='form-check-label'
                >{{text}}</label>
                <input
                  type='checkbox'
                  class='form-check-input'
                  role='switch'
                  id='flexSwitchCheckChecked'
                  checked
                />
              </div>

            {{else}}

              <div class='form-check form-switch'>
                <label
                  class='form-check-label'
                >{{text}}</label>
                <input
                  type='checkbox'
                  class='form-check-input'
                  role='switch'
                  id='flexSwitchCheckDefault'
                />
              </div>
            {{/if}}
          </div>
        {{/each}}
        <hr />
      </div>
    {{/with}}
  {{/with}}

  <div class='row col-4'>
    <div class='card'>
      <div class='card-body'>
        {{#each action_block}}
          {{#if isSuccess}}<button
              class='btn btn-success'
            >{{text}}</button>{{/if}}
          {{#if isDanger}}<button
              class='btn btn-danger my-2 me-5'
            >{{text}}</button>{{/if}}
          {{#if isInfo}}<button
              class='btn btn-info text-white'
            >{{text}}</button>{{/if}}
        {{/each}}
      </div>
    </div>
    {{#with total}}
      <div class='card mt-4'>
        <div class='card-body'>
          <h3>{{title}}</h3>
          {{#each item_list}}
            <div>{{name}}: {{price}}</div>
          {{/each}}
          <hr />
          {{#each additional_info}}
            <div>{{text}}: {{value}}</div>
          {{/each}}
          <hr />
          {{#with total_price}}
            <div>{{text}}: {{value}}</div>
          {{/with}}
          <hr />
          {{#each button}}
            {{#if isPrimary}}<button
                class='btn btn-primary mb-3'
              >{{text}}</button>{{/if}}
            {{#if isOutline}}<button
                class='btn btn-outline-primary'
              >{{text}}</button>{{/if}}
          {{/each}}
        </div>
      </div>
    {{/with}}
  </div>

  {{#with delivery}}
    <h3 class='mb-2'>{{title}}</h3>
    <div class='card col-8'>
      <div class='row'>
        {{#each select}}
          <div class='card-body col-4'>
            <label class='form-label'>{{label}}</label>
            <select class='form-select'>
              <option selected>{{placeholder}}</option>
              {{#each options}}
                <option value='{{value}}'>{{text}}</option>
              {{/each}}
            </select>
          </div>
        {{/each}}
      </div>
    </div>

    <div class='col-8 my-3'>
      {{#each delivery_type}}
        <div class='form-check'>
          <label class='form-check-label'>{{type}}</label>
          <input
            type='radio'
            class='form-check-input'
            name='delivery'
          />
        </div>
      {{/each}}
      <hr />
    </div>

    {{#with payment}}
      <h3>{{title}}</h3>
      <div class='col-8'>
        {{#each list}}
          <div class='form-check'>
            <label class='form-check-label'>{{type}}</label>
            <input
              type='radio'
              class='form-check-input'
              name='payment'
            />
            <div class='form-text'>{{description}}</div>
          </div>
        {{/each}}
        <hr />
      </div>
    {{/with}}

    {{#with contact}}
      <h3>{{title}}</h3>
      <div class='row col-8'>
        {{#with surname}}
          <div class='col-6 my-3'>
            <label class='form-label'>{{label}}</label>
            <input
              class='form-control'
              placeholder='{{placeholder}}'
            />
            <div class='form-text'>{{caption}}</div>
          </div>
        {{/with}}

        {{#with name}}
          <div class='col-6 my-3'>
            <label class='form-label'>{{label}}</label>
            <input
              class='form-control'
              placeholder='{{placeholder}}'
            />
            <div class='form-text'>{{caption}}</div>
          </div>
        {{/with}}

        {{#with phone}}
          <div class='col-6 my-3'>
            <label class='form-label'>{{label}}</label>
            <input
              class='form-control'
              placeholder='{{placeholder}}'
            />
            <div class='form-text'>{{caption}}</div>
          </div>
        {{/with}}

        {{#with email}}
          <div class='col-6 my-3'>
            <label class='form-label'>{{label}}</label>
            <input
              class='form-control'
              placeholder='{{placeholder}}'
            />
            <div class='form-text'>{{caption}}</div>
          </div>
        {{/with}}
        <hr />
      </div>
    {{/with}}

    {{#with coment}}
      <div class='col-8 my-5'>
        <label class='form-label'>{{label}}</label>
        <input
          class='form-control'
          placeholder='{{placeholder}}'
        />
        <hr />
      </div>
    {{/with}}
  {{/with}}

  {{#with coupon}}
    <h3>{{title}}</h3>
    {{#with select}}
      {{#with availabel_coupon}}
        <div class='col-8 my-2'>
          <label class='form-label'>{{label}}</label>
          <select class='form-select form-select-lg'>
            <option selected>{{placeholder}}</option>
            {{#each options}}
              <option value='{{value}}'>{{text}}</option>
            {{/each}}
          </select>
        </div>
      {{/with}}

      {{#with friend_coupon}}
        <div class='col-8 my-2'>
          <label class='form-label'>{{label}}</label>
          <select class='form-select form-select-sm'>
            <option selected>{{placeholder}}</option>
            {{#each options}}
              <option value='{{value}}'>{{text}}</option>
            {{/each}}
          </select>
        </div>
      {{/with}}
    {{/with}}

    {{#with add}}
      {{#with friend}}
        <div class='col-8 my-2'>
          <label class='form-label'>{{label}}</label>
          <input
            class='form-control form-control-lg'
            placeholder='{{placeholder}}'
          />
          <div class='form-text'>{{caption}}</div>
        </div>
      {{/with}}

      {{#with colleague}}
        <div class='col-6 my-2'>
          <label class='form-label'>{{label}}</label>
          <input
            class='form-control form-control-sm'
            placeholder='{{placeholder}}'
          />
          <div class='form-text'>{{caption}}</div>
        </div>
      {{/with}}
    {{/with}}
  {{/with}}
  <hr class='col-8' />
  {{#with quiz}}
    <h3>{{title}}</h3>
    {{#with preference}}
      <div class='col-8 my-3'>
        <div class='form-label'>{{title}}</div>
        {{#each options}}
          <div class='form-check'>
            <label class='form-check-label'>{{this}}</label>
            <input
              type='radio'
              class='form-check-input'
              name='quiz'
            />
          </div>
        {{/each}}
      </div>
    {{/with}}

    {{#with your_expirience}}
      <div class='col-8 my-3'>
        <label class='form-label'>{{label}}</label>
        <input class='form-control' />
      </div>
    {{/with}}

    {{#with purchase_frequency}}
      <div class='col-8 my-3'>
        <label class='forrm-label'>{{label}}</label>
        <select class='form-select'>
          <option selected>{{placeholder}}</option>
          {{#each options}}
            <option value='{{value}}'>{{text}}</option>
          {{/each}}
        </select>
      </div>
    {{/with}}

    {{#with factors}}
      <div class='col-8 mt-3'>
        <div class='form-label'>{{title}}</div>
        {{#each options}}
          <div class='form-check'>
            <label class='form-check-label'>{{this}}</label>
            <input
              name='factors'
              type='checkbox'
              class='form-check-input'
            />
          </div>
        {{/each}}
      </div>
    {{/with}}
  {{/with}}

  <hr class='mt-5' />
</div>