{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div class='row p-5'>
  <header>
    {{#with page_header}}
      <div><h1 class='text-center'>{{title}}</h1></div>
      <br />
      <div><p
          class='text-center text-uppercase'
        >{{description}}</p></div>
    {{/with}}
  </header>
  <br />
  <main>
    <div>
      {{#with section}}
        <div class='card'>
          <div class='card-body'>
            {{#with about_us}}
              <div
                class='display-6 text-end'
              >{{title_list.main}}</div>
              <br />
              <div><h2
                  class='text-end'
                >{{title_list.sub}}</h2></div>
              <br />
              <div><button
                  class='btn btn-outline-info'
                >{{button.text}}</button></div>
            {{/with}}
          </div>
        </div>
        <br />
        <div class='card'>
          <div class='card-body'>
            <div>
              {{#with advantage}}
                <div
                  class='display-5 text-muted'
                >{{title}}</div>
                <br />
                <ul>
                  <div class='card'>
                    <div class='card-body'>
                      {{#with efficiency}}
                        <div
                          class='display-4 text-muted text-lowercase'
                        >{{title}}</div>
                        <br />
                        <div><h6>{{sub_title}}</h6></div>
                        <br />
                        <div><p>{{description}}</p></div>
                        <br />
                        <div><button
                            class='btn btn-outline-warning'
                          >{{button}}</button></div>
                      {{/with}}
                    </div>
                  </div>
                  <br />
                  <div class='card'>
                    <div class='card-body'>
                      {{#with innovation}}
                        <div
                          class='display-4 text-center text-muted text-lowercase'
                        >{{title}}
                        </div>
                        <br />
                        <div><h6
                            class='text-center'
                          >{{sub_title}}</h6>
                        </div>
                        <br />
                        <div><p
                            class='text-center'
                          >{{description}}</p>
                        </div>
                        <br />
                        <div><button
                            class='btn btn-outline-warning'
                          >{{button}}</button></div>
                      {{/with}}
                    </div>
                  </div>
                  <br />
                  <div class='card'>
                    <div class='card-body'>
                      {{#with collaboration}}
                        <div
                          class='display-4 text-muted text-end text-lowercase'
                        >{{title}}</div>
                        <br />
                        <div><h6
                            class='text-end'
                          >{{sub_title}}</h6></div>
                        <br />
                        <div><p
                            class='text-end'
                          >{{description}}</p></div>
                        <br />
                        <div><button
                            class='btn btn-outline-warning'
                          >{{button}}</button></div>
                      {{/with}}
                    </div>
                  </div>
                </ul>
              {{/with}}
            </div>
          </div>
        </div>
        <br />
        <div class='card'>
          <div class='card-body'>
            {{#with agreement}}
              <div
                class='display-5 text-lowercase'
              >{{title}}
              </div>
              <br />
              <div class='card'>
                <div class='card-body'>
                  {{#with info}}
                    <div><h5>{{sub_title}}</h5></div>
                    <br />
                    <div class='card'>
                      <div class='card-body'>
                        {{#with detail}}
                          <div><p>{{text}}</p></div>
                          <br />
                          <div><button
                              class='btn btn-success'
                            >{{button}}</button></div>
                        {{/with}}
                      </div>
                    </div>
                  {{/with}}
                </div>
              </div>
            {{/with}}
          </div>
        </div>
        <br />
      {{/with}}
    </div>
  </main>
</div>

