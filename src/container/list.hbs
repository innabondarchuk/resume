{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  <ul> 
    {{!-- застосування @first виводиться для першого елемента--}}
    {{#each list}}
      <li>
        {{#if @first}}first{{/if}}
        <span>{{name}}</span>
      </li>
    {{/each}}
  </ul>
  <hr>
  <ul>
    {{!-- @last застосування виводиться для останнього елемента --}}
    {{#each list}}
      <li>
        <button  {{#if @last}}disabled{{/if}}>{{name}}</button>
      </li>
    {{/each}}
  </ul>
  <hr>
  <ul>
    {{!-- @index вказує порядковий номер елемента списка [] --}}
    {{#each list}}
      <li>
        <span>{{name}} - {{@index}}</span>
      </li>
    {{/each}}
  </ul>
  <hr>
  <ul>
    {{!-- @kay вказує порядковий номер елемента об'єкта {} виводить назву змінної--}}
    {{#each user}}
      <li>{{@key}}: {{this}},</li>
    {{/each}}
  </ul>
  <hr>
  <ul>
    {{#each user1}}
      <li>
        {{@first}}
        {{value}}
      </li>
    {{/each}}
  </ul>
  <hr>
  <ul>
    {{#each user2}}
      <li>
        {{@last}}
        {{#if value}}
          {{value}}
        {{else}}
          {{text}}
        {{/if}}
      </li>
    {{/each}}
  </ul>
</div>

