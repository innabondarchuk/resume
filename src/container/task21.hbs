{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  <div class='card'>
    <div lass='card-body'>
      <br />
      <ul>
        {{#with heading}}
          <div class='card'>
            <div class='card-body'>
              {{#with main}}
                <h1>{{title}}</h1>
                <p>{{text}}</p>
                <div>
                  {{#with button_text}}
                    <div>
                      <button
                        class='btn btn-primary'
                      >{{solid}}
                      </button>
                    </div>
                    <br />
                    <div>
                      <button
                        class='btn btn-outline-primary'
                      >{{outline}}
                      </button>
                    </div>
                  {{/with}}
                </div>
              {{/with}}
            </div>
          </div>
          <br />
          <div class='card'>
            <div class='card-body'>
              {{#with second}}
                <h2>{{title}}</h2>
                <p>{{text}}</p>
                <div>
                  {{#with button_text}}
                    <div>
                      <button
                        class='btn btn-secondary'
                      >{{solid}}
                      </button>
                    </div>
                    <br />
                    <div>
                      <button
                        class='btn btn-outline-secondary'
                      >{{outline}}
                      </button>
                    </div>
                  {{/with}}
                </div>
              {{/with}}
            </div>
          </div>
          <br />
          <div class='card'>
            <div class='card-body'>
              {{#with subblock}}
                <h3>{{title}}</h3>
                <p>{{text}}</p>
                <div>
                  {{#with button_text}}
                    <div>
                      <button class='btn btn-dark'>{{solid}}
                      </button>
                    </div>
                    <br />
                    <div>
                      <button
                        class='btn btn-outline-dark'
                      >{{outline}}
                      </button>
                    </div>
                  {{/with}}
                </div>
              {{/with}}
            </div>
          </div>
        {{/with}}
      </ul>
    </div>
  </div>
  <br />
  <br />
  <br />
  <div class='card'>
    <div lass='card-body'>
      {{#with nested_display}}
        <div class='display-1'>{{title}}</div>
        <br />
        <ul>
          {{#with children_display}}
            <div class='card'>
              <div class='card-body'>
                <div class='display-4'>{{title}}</div>
                <p>{{text}}</p>
                <div>
                  {{#with button}}
                    <button
                      class='btn btn-outline-warning'
                    >{{text}}</button>
                  {{/with}}
                </div>
              </div>
            </div>
          {{/with}}
        </ul>
        <br />
        <h6>{{header_text}}</h6>
        <br />
        <div>
          {{#with button}}
            <button class='btn btn-info'>{{text}}</button>
          {{/with}}
        </div>
        <br />
      {{/with}}
    </div>
  </div>
  <br />
  <br />
  <br />
  <div class='card'>
    <div class='carh-body'>
      <br />
      {{#with paragraph}}
        <p class='text-uppercase'>{{title}}</p>
        <p class='text-lowercase'>{{text}}</p>
        <div>
          {{#with button}}
            <a
              class='btn btn-link'
              href='{{url}}'
              target='_blank'
              role='button'
            >{{text}}</a>
          {{/with}}
        </div>
        <br />
        <div class='card'>
          <div class='card-body'>
            <ul>
              {{#each list_name}}
                <li>
                  <a
                    class='btn btn-link'
                    href='{{url}}'
                    target='_blank'
                    role='button'
                  >{{text}}</a>
                </li>
              {{/each}}
            </ul>
          </div>
        </div>
        <br />
      {{/with}}
    </div>
  </div>

</div>

{{!-- 
    Цей код містить лише те, що буде виводитись в {{{body}}} в layout/default.hbs
    Адже наш layout/default.hbs має вже структуру HTML
--}}