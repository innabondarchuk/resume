<div class='row p-1 my-3'>
  <div class='col-3'>
    <p>{{number}}</p>
    <h6>{{status}}</h6>
  </div>

  <div class='col-2'>
    {{#with amount}}
      <p>{{title}}</p>
      <h5>{{value}}</h5>
    {{/with}}
  </div>

  <div class='col-5'>
    {{#each images}}
      <img src='{{this}}' alt='Product photo' />
    {{/each}}
  </div>

  <div class='col-2'>
    {{#with button}}
      {{#if isPrimary}}
        <a
          href='{{link}}'
          class='btn btn-primary'
          target='_blank'
        >{{text}}</a>
      {{/if}}
    {{/with}}
  </div>
  <hr />
</div>