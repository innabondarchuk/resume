<nav>
  <div class='row'>
    {{#with navigation}}
      <div class="card p-2 m-3">
        <div class="nav">
          {{#each links}}
            <div class="nav-item">
              <a
                class='nav-link {{#if @last}}disabled{{/if}}'
                href='{{href}}'
                target='_blank'
              >{{text}}</a>
            </div>
          {{/each}}
        </div>
      </div>
    {{/with}}
  </div>
</nav>