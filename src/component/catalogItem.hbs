<div class='card col-5 mb-2 mx-1'>
  <img src='{{img}}' class='card-img-top' alt='photo' />
  <div class='card-body'>
    {{#if isHot}}<button
        class='btn btn-warning btn-sm rounded-pill text-uppercase mb-3'
      >Hot!</button>{{/if}}
    {{#if isNew}}<button
        class='btn btn-primary btn-sm rounded-pill mb-3'
      >Нове</button>{{/if}}
    {{#if isFast}}<button
        class='btn btn-success btn-sm mb-3'
      >Швидка доставка</button>{{/if}}
    {{#if isFree}}<button
        class='btn btn-secondary btn-sm mb-3'
      >Безкоштовна доставка</button>{{/if}}
    <h5>{{name}}</h5>
    {{#with review}}
      <p>{{amount}} {{text}}</p>
    {{/with}}
    <h4>{{price}}</h4>
    <p>{{delivery}}</p>
    {{#each buttons}}
      {{#if isPrimary}}<a
          href='{{link}}'
          class='btn btn-primary'
        >{{text}}</a>{{/if}}
      {{#if isSecondary}}<a
          href='{{link}}'
          class='btn btn-secondary my-3'
        >{{text}}</a>{{/if}}
    {{/each}}
    {{#each characteristics}}
      <ul>
        <li>
          <div>{{title}}: {{value}}</div>
        </li>
      </ul>
    {{/each}}
  </div>
</div>