{{#with goodsOtherBlock}}
  <h2 class='text-center'>{{title}}</h2>
  <div class='row'>
    {{#each cards}}
      <div class='col-4 g-2 mb-5'>
        <div class='card'>
          <img
            class='card-img-top'
            src='{{image}}'
            alt='Product photo'
          />
          <div class='card-body'>
            <h6>{{title}}
              <span>{{#if isHot}}<button
                    class='btn btn-warning rounded-pill text-uppercase'
                  >Hot!</button>{{/if}}</span>
              <span>{{#if idNew}}<button
                    class='btn btn-primary rounded-pill'
                  >Нове</button>{{/if}}</span>
            </h6>
            <p>{{description}}</p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{/with}}