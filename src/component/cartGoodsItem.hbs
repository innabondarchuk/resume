{{#each goodsBlock}}
  <div class='card col-12 my-2'>
    <div class='row'>

      <div class='col-2'>
        <img
          src='{{image}}'
          class='card-img-top'
          alt='Product photo'
        />
      </div>
      <div class='col-4'>
        <div class='card-body'>
          <h5 class='card-title'>{{name}}</h5>
          <p class='card-text'>{{description}}</p>
        </div>
      </div>
      {{#with price}}
        <div class='col-2'>
          <div class='card-body'>
            <p class='card-title'>{{title}}</p>
            <h5 class='card-text'>{{value}}</h5>
          </div>
        </div>
      {{/with}}
      <div class='col-2'>
        <div class='card-body'>
          <p class='card-text'>{{amount}}</p>
        </div>
      </div>
      <div class='col-2'>
        <div class='card-body'>
          {{#each buttons}}
            {{#if isPrimary}}<button
                class='btn btn-primary mb-2'
              >{{text}}</button>{{/if}}
            {{#if isDanger}}<button
                class='btn btn-outline-danger'
              >{{text}}</button>{{/if}}
          {{/each}}
        </div>
      </div>

    </div>
  </div>
{{/each}}